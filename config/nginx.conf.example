events {
    worker_connections 1024;
}

http {
    upstream powersync_api {
        server powersync-api:8080 max_fails=3 fail_timeout=30s;
    }

    server {
        listen 80;
        server_name _;
        
        location / {
            proxy_pass http://powersync_api;
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_buffering off;
        }
    }
}